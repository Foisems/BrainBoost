<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="610dp"
    tools:context=".GamePasswordFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:gravity="center"
            android:maxLength="11"
            android:text=""
            android:textAllCaps="true"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNumber"
            app:shapeAppearanceOverlay="@style/circular" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#80FFE5B4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewHeart1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewHeart2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart_up"
            app:layout_constraintEnd_toStartOf="@+id/imageViewHeart3"
            app:layout_constraintStart_toEndOf="@+id/imageViewHeart1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewHeart3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/heart_up"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:columnCount="5"
            android:useDefaultMargins="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNumber">

            <Button
                android:id="@+id/num0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:background="@drawable/button_game_color_yellow"
                android:text="0"
                android:layout_row="1"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:background="@drawable/button_game_color_yellow"
                android:text="1"
                android:layout_row="1"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:background="@drawable/button_game_color_yellow"
                android:text="2"
                android:layout_row="1"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:layout_row="1"
                android:background="@drawable/button_game_color_yellow"
                android:text="3"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/numBack"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@drawable/button_game_color_light_blue"
                android:text="ᐊ"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:background="@drawable/button_game_color_yellow"
                android:text="4"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />


            <Button
                android:id="@+id/num5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:background="@drawable/button_game_color_yellow"
                android:text="5"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:background="@drawable/button_game_color_yellow"
                android:text="6"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:background="@drawable/button_game_color_yellow"
                android:text="7"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:background="@drawable/button_game_color_yellow"
                android:text="8"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/num9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:background="@drawable/button_game_color_yellow"
                android:text="9"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/numEnter"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:background="@drawable/button_game_color_green"
                android:text="Ввести"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </GridLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>