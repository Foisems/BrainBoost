<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="610dp"
    tools:context=".GamePasswordFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#80FFE5B4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewHeart1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewHeart2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart_up"
            app:layout_constraintEnd_toStartOf="@+id/imageViewHeart3"
            app:layout_constraintStart_toEndOf="@+id/imageViewHeart1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewHeart3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/heart_up"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:columnCount="5"
            android:useDefaultMargins="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4">

            <Button
                android:id="@+id/panel0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text=""
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />


            <Button
                android:id="@+id/panel5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel10"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel11"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel12"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel13"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel14"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="2"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/panel15"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_column="3"
                android:background="@color/light_gray"
                android:textColor="@color/textColorDark"
                android:textSize="20sp" />


        </GridLayout>

        <Button
            android:id="@+id/panelEnter"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_game_color_green"
            android:text="Проверить"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/gridLayout"
            app:layout_constraintStart_toStartOf="@+id/gridLayout"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewIsCorrect"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gridLayout"
            app:shapeAppearanceOverlay="@style/circular" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>